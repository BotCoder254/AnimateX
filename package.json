{
  "name": "animatex",
  "version": "1.0.0",
  "description": "Professional animation framework with advanced effects, state transitions, and zero JavaScript requirements",
  "main": "dist/animatex.js",
  "module": "dist/animatex.esm.js",
  "style": "dist/animatex.css",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "rollup -c",
    "build:css": "postcss src/styles/animatex.css -o dist/animatex.css && postcss src/styles/animatex.css -o dist/animatex.min.css --env production",
    "dev": "rollup -c -w",
    "test": "jest",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{js,css}\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "clean": "rimraf dist"
  },
  "keywords": [
    "animation",
    "css",
    "javascript",
    "framework",
    "motion",
    "transitions",
    "effects",
    "web-animations",
    "performance",
    "utility-first"
  ],
  "author": "AnimateX Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/animatex/animatex.git"
  },
  "bugs": {
    "url": "https://github.com/animatex/animatex/issues"
  },
  "homepage": "https://animatex.dev",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.0",
    "cssnano": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^10.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "rollup": "^3.0.0",
    "tailwindcss": "^3.0.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "sideEffects": false
}
