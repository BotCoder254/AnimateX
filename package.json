{
  "name": "velocityfx",
  "version": "1.0.0",
  "description": "Professional animation framework with advanced effects, state transitions, and zero JavaScript requirements",
  "type": "module",
  "main": "dist/velocityfx.js",
  "module": "dist/velocityfx.esm.js",
  "style": "dist/velocityfx.css",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "rollup -c",
    "build:css": "postcss src/styles/velocityfx.css -o dist/velocityfx.css && NODE_ENV=production postcss src/styles/velocityfx.css -o dist/velocityfx.min.css",
    "dev": "rollup -c -w",
    "test": "jest --passWithNoTests",
    "lint": "eslint src --max-warnings 0",
    "format": "prettier --write \"src/**/*.{js,css}\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "clean": "rimraf dist"
  },
  "keywords": [
    "animation",
    "css",
    "javascript",
    "framework",
    "motion",
    "transitions",
    "effects",
    "web-animations",
    "performance",
    "utility-first"
  ],
  "author": "VelocityFX Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/velocityfx/velocityfx.git"
  },
  "bugs": {
    "url": "https://github.com/velocityfx/velocityfx/issues"
  },
  "homepage": "https://velocityfx.dev",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.3",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.5",
    "tailwindcss": "^3.4.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "sideEffects": false
}
